@model List<ChamadoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Listagem de Chamados</h2>

<a href="/chamado/create" class="btn btn-success">Novo Registro</a>
<br />

<table class="table table-responsive table-striped">
    <tr>
        <th>Ações</th>
        <th>RA</th>
        <th>Nome</th>
        <th>Data de nascimento</th>
        <th>Mensalidade</th>
        <th>Cidade</th>
    </tr>
    @foreach (var aluno in Model)
    {
        <tr>
            <td>
                <a href="/aluno/Edit?id=@aluno.Id" class="btn btn-info">Editar</a>
                <a href="javascript:apagarAluno(@aluno.Id)" class="btn btn-danger">Apagar</a>
            </td>
            <td>@aluno.Id</td>
            <td>@aluno.Nome</td>
            <td>@aluno.DataNascimento.ToShortDateString()</td>
            <td>@aluno.Mensalidade?.ToString("0.00")</td>
            <td>@aluno.CidadeId</td>
        </tr>
    }
</table>

<script>
    function apagarAluno(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'aluno/Delete?id=' + id;
    }
</script>

